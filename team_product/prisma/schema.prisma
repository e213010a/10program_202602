// Prisma Schema
// データベースの構造を定義するファイル

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/app.db"
}

// アイテムモデル
// シンプルなCRUDアプリの基本データ構造
model Item {
  id        Int      @id @default(autoincrement())  // 自動採番のID
  title     String                                   // アイテム名
  completed Boolean  @default(false)                // 完了フラグ
  createdAt DateTime @default(now())                // 作成日時
  updatedAt DateTime @updatedAt                     // 更新日時
}
